{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "classic",
    "target": "es5",
    "lib": ["dom", "es5", "es2015"],
    "declaration": false,
    "noImplicitAny": false,
    "stripInternal": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "traceResolution": true,
    "baseUrl": "./",
    "pretty": false,
    "diagnostics": true,
    "locale": "ru",
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "include": [
    "./**/*.ts",
	"./spec/*"
  ]
}
