<div class="ws-flexbox">
   <img class="controls-demo_MasterDetail_item-personPhoto controls-demo_MasterDetail_item-personPhoto-{{item.img}}"/>
   <div>
      <div class="controls-demo_MasterDetail_item-personName">{{item.name}}</div>
      <div class="controls-demo_MasterDetail_item-task">
         <div class="{{item.isNew ? 'controls-demo_MasterDetail_item-taskTypeNew'}}">{{item.taskType}}</div>
         <div class="controls-demo_MasterDetail_item-taskMsg">{{item.shortMsg}}</div>
      </div>
   </div>
   <div class="ws-flex-grow-1 controls-demo_MasterDetail_item-date">{{item.date}}</div>
</div>
