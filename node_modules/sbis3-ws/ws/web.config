<?xml version="1.0" encoding="UTF-8"?>
<configuration>
   <system.webServer>
      <staticContent>
         <remove fileExtension=".xml"/>
         <remove fileExtension=".xsl"/>
         <remove fileExtension=".xslt"/>
         <remove fileExtension=".js"/>
         <remove fileExtension=".hdl"/>
         <remove fileExtension=".json"/>

         <mimeMap fileExtension=".xml" mimeType="text/xml; charset=UTF-8"/>
         <mimeMap fileExtension=".xsl" mimeType="text/xml; charset=UTF-8"/>
         <mimeMap fileExtension=".xslt" mimeType="text/xml; charset=UTF-8"/>
         <mimeMap fileExtension=".json" mimeType="application/json; charset=UTF-8"/>
         <mimeMap fileExtension=".js" mimeType="application/x-javascript; charset=utf-8"/>
         <mimeMap fileExtension=".hdl" mimeType="application/x-javascript; charset=utf-8"/>
         <clientCache cacheControlMode="DisableCache"/>
      </staticContent>
      <caching>
         <profiles>
            <remove extension=".html"/>
            <remove extension=".css"/>
            <remove extension=".xsl"/>
            <remove extension=".xslt"/>
            <remove extension=".js"/>
            <remove extension=".hdl"/>
            <remove extension=".xml"/>

            <add extension=".html" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".css" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".xsl" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".xslt" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".js" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".hdl" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
            <add extension=".xml" policy="CacheUntilChange" kernelCachePolicy="DontCache"/>
         </profiles>
      </caching>
      <httpProtocol>
         <customHeaders>
            <remove name="Cache-control" />

            <add name="Cache-control" value="must-revalidate, max-age=0"/>
         </customHeaders>
      </httpProtocol>
   </system.webServer>
</configuration>