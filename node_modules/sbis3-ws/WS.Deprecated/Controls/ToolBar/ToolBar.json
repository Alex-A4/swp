            },
            "onResize" : {
               "title" : "При изменении размеров контейнера",
               "editor" : "handler"
            },
            "onSizeChanged" : {
               "title" : "Событие при изменении размеров",
               "editor" : "handler"
            },
            "onStateChanged" : {
               "title" : "Событие при изменении состояния контрола",
               "editor" : "handler"
            },
            "onTooltipContentRequest" : {
               "title" : "Получение содержимого расширенной подсказки поля",
               "editor" : "handler"
            }
         }
      }
   }
}
