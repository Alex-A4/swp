
<div class="main-row-container" on:click="rowClickHandler()">
	
	<div class="row">
		<div class="box">
			<div>
				<div><h2>{{_options.item.title}}</h2></div>
			</div>
			<div>
				<div>{{_options.item.author}}</div>
			</div>
		</div>
		<div class="box datetime">
			<div>
				<div>{{_options.item.date}}</div>
			</div>
			<div class="time">
				{{_options.item.time}}
			</div>
		</div>
	</div>

	<div class="row description">
		<div>{{_options.item.description}}</div>
	</div>

</div>
